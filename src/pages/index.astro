---
import Layout from '../components/Layout.astro';
const mdPostsGlob = import.meta.glob('../content/ideas/*.md', { eager: true });
const mdxPostsGlob = import.meta.glob('../content/ideas/*.mdx', { eager: true });
const murderHePromptedPostsGlob = import.meta.glob('../content/murderheprompted/*.md', { eager: true });
const murderHePromptedMdxPostsGlob = import.meta.glob('../content/murderheprompted/*.mdx', { eager: true });
const collectedShortStoriesPostsGlob = import.meta.glob('../content/collectedshortstories/*.md', { eager: true });
const collectedShortStoriesMdxPostsGlob = import.meta.glob('../content/collectedshortstories/*.mdx', { eager: true });
const allPosts = [...Object.values(mdPostsGlob), ...Object.values(mdxPostsGlob), ...Object.values(murderHePromptedPostsGlob), ...Object.values(murderHePromptedMdxPostsGlob), ...Object.values(collectedShortStoriesPostsGlob), ...Object.values(collectedShortStoriesMdxPostsGlob)] as any[];
const sortedPosts = allPosts
  .sort((a: any, b: any) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 3);

// Get the base path for creating correct links, which works on any domain
const base = import.meta.env.BASE_URL;
---

<Layout title="Trnq-eu: Stefano Trinchero's Personal Website" description="Human slop, code snippets, weird digital content" showSidebar={false}>
  <div class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">trnq
        </h1>
        <p class="hero-subtitle">[words, thoughts, snippets]</p>
        <!-- <p class="hero-description">
          Contains human slop, the occasional code snippet, random thoughts
        </p> -->
        <!-- <hr class="hero-rule" /> -->
      </div>
    </section> 
  

    <!-- Demo Section -->
    <section class="demo-section" id="demo">
      <div class="container">
        
        {sortedPosts.length > 0 && (
          <div class="demo-posts">
            {sortedPosts.map(post => {

              // 1. Check which folder the post is in to determine its URL path
              const postPath = post.file.includes('/murderheprompted/') 
                ? 'murderheprompted/' 
                : post.file.includes('/collectedshortstories/')
                ? 'collectedshortstories/'
                : 'ideas/'; // All other posts go to the blog route

              // 2. Extract the clean filename (the slug)
              const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');

              // 3. Construct the final, working link
              const finalHref = `${base}${postPath}${slug}`;


              return (
                <article class="demo-post-card">
                  <h3 class="demo-post-title">
                    {/* Use the new 'finalHref' variable we just created */}
                    <a href={finalHref}>{post.frontmatter.title}</a>
                  </h3>
                  
                  <div class="demo-post-meta">
                    <time class="demo-post-date" datetime={post.frontmatter.date}>
                      {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  
                  {post.frontmatter.excerpt && (
                    <p class="demo-post-excerpt">{post.frontmatter.excerpt}</p>
                  )}

                  
                  
                  {post.frontmatter.categories && (
                    <div class="demo-post-categories">
                      {post.frontmatter.categories.map((category: string) => (
                        <span class="demo-category">{category}</span>
                      ))}
                    </div>
                  )}

                  {post.frontmatter.projects && post.frontmatter.projects.length > 0 && (
                    <div class="demo-post-projects">
                      <a href={`/projects/${post.frontmatter.projects[0].toLowerCase().replace(/ /g, '-')}`} class="project-tag">
                        {post.frontmatter.projects[0]}
                      </a>
                    </div>
                  )}
                </article>
              )
            })}
          </div>
        )}
        
        <!-- <div class="demo-actions">
          {/* Note: `blog` needs to be prefixed with `base` as well for portability */}
          <a href={`${base}blog`} class="btn btn-primary">Read all words</a>
        </div> -->
      </div>
    </section>

