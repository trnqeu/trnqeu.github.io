---
// src/components/Frame.astro
import '../styles/frames.css';

interface Props {
    prompt: any; 
}

const { prompt } = Astro.props;


const { Content } = await prompt.render();

const frameClass = `frame-${prompt.frontmatter.frameStyle || 'simple'}`;
---

<div class={frameClass}>
  <div class="content">
    <Content />
  </div>
</div>

<style>
  .content {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 5px;
    height: 100%;
    box-sizing: border-box;
    /* âœ… ADDED: This will make the text visible on your dark background */
    color: #111; 
  }
</style>