---
// src/components/Frame.astro
import { type CollectionEntry } from 'astro:content';
import '../styles/frames.css';

interface Props {
    prompt: any;
    Content: any;
}

const { prompt, Content } = Astro.props;

// Use the frameStyle from frontmatter, or 'simple' as a fallback
const frameClass = `frame-${prompt.frontmatter.frameStyle || 'simple'}`;
---

<div class={frameClass}>
  <div class="content">
    <Content />
  </div>
</div>

<style>
  .content {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 5px;
    /* This ensures the content area fills the frame vertically */
    height: 100%; 
    box-sizing: border-box;
  }
</style>