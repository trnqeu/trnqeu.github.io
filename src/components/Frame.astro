---
// src/components/Frame.astro
import '../styles/frames.css';

interface Props {
    // This component now only needs to know which style to apply.
    frameStyle?: string; 
}

const { frameStyle } = Astro.props;

// Use the passed style, or 'simple' as a fallback.
const frameClass = `frame-${frameStyle || 'simple'}`;
---

<div class={frameClass}>
  <div class="content">
    {/* This is a placeholder where the parent page will insert the content. */}
    <slot />
  </div>
</div>

<style>
  .content {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 5px;
    height: 100%;
    box-sizing: border-box;
    color: #111; /* Ensures text is visible on dark backgrounds */
  }
</style>